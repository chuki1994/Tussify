source 'http://rubygems.org'

gem 'rails', '3.2.0'
gem 'devise'
gem 'cancan'
gem 'will_paginate'
gem 'gravatar_image_tag'
gem 'heroku'
gem 'jquery-rails'
gem 'execjs'
gem 'tzinfo'

group :production do
    gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end

group :development, :test do
  gem 'sqlite3'
  gem 'taps'
end
